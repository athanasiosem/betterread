{
  "manifest_version": 3,
  "name": "betterread",
  "version": "1.0.0",
  "description": "Simple Chrome/Edge extension that changes the layout of a website for better reading experience.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_title": "betterread",
    "default_icon": {
      "16": "images/logo16.png",
      "48": "images/logo48.png",
      "128": "images/logo128.png"
    }
  },
  "icons": {
    "16": "images/logo16.png",
    "48": "images/logo48.png",
    "128": "images/logo128.png"
  }
}